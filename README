docker run -it ubuntu



apt update
apt install git wget xz-utils cmake xxd


wget https://github.com/zephyrproject-rtos/sdk-ng/releases/download/v0.16.8/toolchain_linux-x86_64_arm-zephyr-eabi.tar.xz

tar xvf toolchain_linux-x86_64_arm-zephyr-eabi.tar.xz

export ZEPHYR_SDK_INSTALL_DIR=/

git clone https://github.com/kartben/llext-edk-sample-app/upload
cd llext-edk-sample-app

tar -xf ./llext-edk.tar.xz -C /tmp
export LLEXT_EDK_INSTALL_DIR=/tmp/llext-edk
cmake -B build
cd build && make


xxd -p progress_bar.llext | tr -d '\n'